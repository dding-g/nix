{ pkgs, ... }:

{
  # ═══════════════════════════════════════════════════════════
  # 사용자 패키지
  # ═══════════════════════════════════════════════════════════
  home.packages = with pkgs; [
    httpie
    tldr
    tree

    # 커스텀 스크립트
    (writeShellScriptBin "wt" (builtins.readFile ../../scripts/wt))
  ];

  # ═══════════════════════════════════════════════════════════
  # fzf (Fuzzy Finder)
  # ═══════════════════════════════════════════════════════════
  programs.fzf = {
    enable = true;
    enableZshIntegration = true;
  };

  # ═══════════════════════════════════════════════════════════
  # direnv (디렉토리별 환경변수)
  # ═══════════════════════════════════════════════════════════
  programs.direnv = {
    enable = true;
    nix-direnv.enable = true;
  };

  # ═══════════════════════════════════════════════════════════
  # zoxide (스마트 cd)
  # z <키워드>로 자주 가는 디렉토리 빠르게 이동
  # ═══════════════════════════════════════════════════════════
  programs.zoxide = {
    enable = true;
    enableZshIntegration = true;
  };
}
